{form form}
    <div class="row h-100 align-content-start">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <div class="card-label">
                        <svg viewBox="0 0 24 24" fill="currentColor"
                             class="svg-icon--material svg-icon card-icon text-primary" data-name="Material--Info">
                            <path d="M0 0h24v24H0V0z" fill="none"></path>
                            <path d="M12 4c-4.41 0-8 3.59-8 8s3.59 8 8 8 8-3.59 8-8-3.59-8-8-8zm1 13h-2v-6h2v6zm0-8h-2V7h2v2z"
                                  opacity="0.3"></path>
                            <path d="M11 7h2v2h-2zm0 4h2v6h-2zm1-9C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8z"></path>
                        </svg>
                        <div class="card-title-wrapper">
                            <h5 class="card-title">Zmena hesla</h5>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    {if ($form->getErrors()|length) > 0}
                        <ul class="form-errors">
                            {foreach $form->getErrors() as $error}
                                <li>{$error}</li>
                            {/foreach}
                        </ul>
                    {/if}
                    <div class="row g-4 mb-4">
                        <div class="col-md-12">
                            <div class="form-floating form-input-group">
                                <input
                                        type="password"
                                        class="form-control js-password"
                                        placeholder="Aktuálne heslo"
                                        n:name="passwordOld"
                                >
                                <span class="js-password-toggle-btn is-closed">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye-slash" viewBox="0 0 16 16">
                                      <path d="M13.359 11.238C15.06 9.72 16 8 16 8s-3-5.5-8-5.5a7.028 7.028 0 0 0-2.79.588l.77.771A5.944 5.944 0 0 1 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.134 13.134 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755-.165.165-.337.328-.517.486l.708.709z"/>
