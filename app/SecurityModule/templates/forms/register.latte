{form form}
    {*    {foreach $form->errors as $error}*}
    {*        <div class="alert alert-danger">{$error}</div>*}
    {*    {/foreach}*}
    <div class="col-12 mb-3">
        <div class="form-floating">
            <input
                    n:name="firstName"
                    class="form-control"
                    placeholder="Meno"
                    style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;">
            <label
                    n:name="firstName"
                    class="form-label">Meno</label>
            <div class=invalid-feedback n:ifcontent>{inputError firstName}</div>
        </div>
    </div>
    <div class="col-12 mb-3">
        <div class="form-floating">
            <input
                    n:name="lastName"
                    class="form-control"
                    placeholder="Priezvisko"
                    style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;">
            <label
                    n:name="lastName"
                    class="form-label">Priezvisko</label>
            <div class=invalid-feedback n:ifcontent>{inputError lastName}</div>
        </div>
    </div>
    <div class="col-12 mb-3">
        <div class="form-floating">
            <input
                    n:name="email"
                    class="form-control"
                    placeholder="E-mail"
                    style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;">
            <label
                    n:name="email"
                    class="form-label">Váš e-mail</label>
        </div>
        <div class=invalid-feedback n:ifcontent>{inputError email}</div>
    </div>
    <div class="col-12 mb-3">
        <div class="form-floating">
            <input
                    n:name="password"
                    class="form-control"
                    placeholder="Váš e-mail"
                    style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;">
            <label
                    n:name="password"
                    class="form-label"
            >Vaše heslo</label>
            <div class=invalid-feedback n:ifcontent>{inputError password}</div>
        </div>
    </div>
    <div class="col-12 mb-3">
        <button
                type="submit"
                n:name="submit"
                class="btn btn-info w-100 py-3"
        >Registrovať sa</button>
    </div>
{/form}
