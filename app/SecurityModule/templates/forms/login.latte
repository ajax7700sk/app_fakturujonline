{form form}
    <div class="col-12 mb-3">
        <div class="form-floating">
            <input
                   n:name="email"
                   class="form-control"
                   placeholder="Váš e-mail"
                   style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;">
            <label
                    n:name="email"
                    class="form-label">Váš e-mail</label>
        </div>
    </div>
    <div class="col-12 mb-3">
        <div class="form-floating">
            <input
                    n:name="password"
                    class="form-control"
                    placeholder="Váš e-mail"
                    style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;">
            <label
                    n:name="password"
                    class="form-label"
            >Vaše heslo</label>
        </div>
    </div>
    <div class="col-12">
        <button
                type="submit"
                n:name="submit"
                class="btn btn-warning w-100 py-3"
        >Prihlásiť sa</button>
    </div>
    <div class="col-12 mt-3 text-center text-muted">Alebo</div>
    <div class="col-12">
        <button type="button" class="btn btn-primary w-100 py-3 mt-3">Obnoviť
            heslo
        </button>
    </div>
{/form}
