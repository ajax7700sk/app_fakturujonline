<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width">

	<title>{ifset title}{include title|stripHtml} | {/ifset}Fakturujonline.sk</title>
	<!-- Main.css -->
	<link rel="stylesheet" href='{webpack "dist/css/main.css"}'>
	<!-- Datagrid dependencies -->
	<link rel="stylesheet" href="{$basePath}/assets/vendors/ublaboo/datagrid/assets/datagrid.css">
	<link rel="stylesheet" href="{$basePath}/assets/vendors/ublaboo/datagrid/assets/datagrid-spinners.css">
</head>

<body
		class="{if isset($body_classes)}{$body_classes}{else}{/if}"
		style="{if isset($body_styles)}{$body_styles}{else}{/if}">
	<div class="d-flex flex-column flex-grow-1 flex-shrink-1">
		<!-- Flashes -->
		<div n:foreach="$flashes as $flash" n:class="alertflash, $flash->type, alert">{$flash->message}</div>

		<!-- Aside nav -->
		{include 'partials/aside-nav.latte'}
		<!-- Wrapper -->
		<div class="wrapper">
			{include 'partials/header.latte'}
			<!-- Content -->
			<main class="content">
				<div class="page-wrapper container-fluid">
					<!-- TODO: breadcrumbs -->
					<div class="subheader-left col-sm"><nav aria-label="breadcrumb" style="--bs-breadcrumb-divider: none;"><ol class="breadcrumb"><li class="breadcrumb-item" aria-label="Home"><a aria-label="Home" href="/"><svg viewBox="0 0 24 24" fill="currentColor" class="svg-icon--material svg-icon" data-name="Material--HolidayVillage"><path fill="none" d="M0 0h24v24H0z"></path><path d="M8 6.83l-4 4V18h3v-3h2v3h3v-7.17l-4-4zM9 13H7v-2h2v2z" opacity="0.3"></path><path d="M8 4l-6 6v10h12V10L8 4zm4 14H9v-3H7v3H4v-7.17l4-4 4 4V18zm-3-5H7v-2h2v2zm9 7V8.35L13.65 4h-2.83L16 9.18V20h2zm4 0V6.69L19.31 4h-2.83L20 7.52V20h2z"></path></svg></a></li><li class="breadcrumb-item active" aria-current="page" aria-label="Kontakty"><svg viewBox="0 0 24 24" fill="currentColor" class="svg-icon--material svg-icon breadcrumb-icon" data-name="Material--ChevronRight"><path d="M0 0h24v24H0V0z" fill="none"></path><path d="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6-6-6z"></path></svg>Kontakty</li></ol></nav><div class="subheader-separator"></div><span class="text-muted">Vytvoriť kontakt</span></div>
					<div class="page container-xxl">
						{include content}
					</div>
				</div>
			</main>

			<!-- footer -->
			<footer class="footer">
				<div class="container-fluid">
					<div class="row">
						<div class="col"><span class="fw-light">Copyright © 2023</span></div>
						<div class="col-auto">
							<a href="https://fakturujonline.sk/"
							   class="text-decoration-none link-dark">
								<small class="fw-bold">Fakturujonline.sk</small>
							</a>
						</div>
					</div>
				</div>
			</footer>
		</div>

	</div>

	<!-- Scripts -->
	{block scripts}
		<script src='{webpack "dist/js/main.js"}'></script>
		{*	<script src="https://nette.github.io/resources/js/3/netteForms.min.js"></script>*}
	{/block}

	<!--datagrid dependencies -->
	<script
			src="https://code.jquery.com/jquery-3.7.0.min.js"
			integrity="sha256-2Pmvv0kuTBOenSvLm6bvfBSSHrUJ+3A7x6P5Ebd07/g="
			crossorigin="anonymous"></script>
	<script src="{$basePath}/assets/js/nette.ajax.js"></script>
	<script>
		// Init nette ajax js
		$(function () {
			$.nette.init();
		});
	</script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
	<script src="{$basePath}/assets/vendors/ublaboo/datagrid/assets/datagrid.js"></script>
	<script src="{$basePath}/assets/vendors/ublaboo/datagrid/assets/datagrid-spinners.js"></script>
</body>
</html>
