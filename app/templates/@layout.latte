<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width">

	<title>{ifset title}{include title|stripHtml} | {/ifset}Nette Web</title>
	<link rel="stylesheet" href='{webpack "dist/css/main.css"}'>
</head>

<body
		class="{if isset($body_classes)}{$body_classes}{else}{/if}"
		style="{if isset($body_styles)}{$body_styles}{else}{/if}">
	<div class="d-flex flex-column flex-grow-1 flex-shrink-1">
		<!-- Flashes -->
		<div n:foreach="$flashes as $flash" n:class="alertflash, $flash->type, alert">{$flash->message}</div>

		<!-- Aside nav -->
		{include 'partials/aside-nav.latte'}
		<!-- Wrapper -->
		<div class="wrapper">
			{include 'partials/header.latte'}
			<!-- Content -->
			{include content}

			<!-- footer -->
			<footer class="footer">
				<div class="container-fluid">
					<div class="row">
						<div class="col"><span class="fw-light">Copyright Â© 2023</span></div>
						<div class="col-auto">
							<a href="https://fakturujonline.sk/"
							   class="text-decoration-none link-dark">
								<small class="fw-bold">Fakturujonline.sk</small>
							</a>
						</div>
					</div>
				</div>
			</footer>
		</div>

	</div>

	<!-- Scripts -->
	{block scripts}
		<script href='{webpack "dist/js/main.js"}'></script>
		{*	<script src="https://nette.github.io/resources/js/3/netteForms.min.js"></script>*}
	{/block}
</body>
</html>
